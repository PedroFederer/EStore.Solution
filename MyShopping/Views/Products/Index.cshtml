@model IEnumerable<MyShopping.Models.ViewModels.ProductIndexVM>

@{
    ViewBag.Title = "Index";
}


<br />
<br />
<br />
<br />

<p>
    @Html.ActionLink("新增商品", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <button class="add2cart" data-id="@item.Id">加入購物車</button>
                    }
                }
            </td>

        </tr>
    }

</table>
@section css{
    <style>
        .add2cart {
            color: red;
        }
    </style>
}


@*定位用的，layout對應*@
@section scripts{
    <script>
        $(document).ready(function () {

            $(".add2cart").each(function () {
                $(this).on("click", function () {
                    var self = $(this);

                    var productId = self.attr("data-id");

                    //ajax 送出request
                    $.get("/Cart/AddItem?productId=" + productId,
                        null,
                        function (result) {
                            alert("已加入購物車");
                        });
                });
            });
        })
    </script>
}
